# Digital Utopia Platform - Environment Variables Template
# Copy this file to .env and fill in actual values

# ============================================================
# ENVIRONMENT
# ============================================================
ENV=development
DEBUG=true

# ============================================================
# APPLICATION
# ============================================================
APP_NAME="Digital Utopia Platform"
APP_VERSION="2.0.0"
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================
# DATABASE (PostgreSQL)
# ============================================================
DATABASE_NAME=digital_utopia
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# ============================================================
# REDIS
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# ============================================================
# PORTS
# ============================================================
BACKEND_PORT=8000
CLIENT_PORT=3000
ADMIN_PORT=3001
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================================
# CORS
# ============================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================
# OPEX CORE INTEGRATION
# ============================================================
OPEX_API_URL=http://localhost:8080
OPEX_MARKET_URL=http://localhost:8081
OPEX_WS_URL=ws://localhost:8080/ws
OPEX_API_KEY=your-opex-api-key
OPEX_API_SECRET=your-opex-api-secret
OPEX_TIMEOUT=30
OPEX_PROFILE=development

# OPEX Database
OPEX_DATABASE_NAME=opex_core
OPEX_DATABASE_USER=opex
OPEX_DATABASE_PASSWORD=opex123
OPEX_DATABASE_URL=postgresql://${OPEX_DATABASE_USER}:${OPEX_DATABASE_PASSWORD}@localhost:5433/${OPEX_DATABASE_NAME}
OPEX_REDIS_URL=redis://localhost:6380/0

# ============================================================
# API URLS (Frontend)
# ============================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
CLIENT_API_BASE_URL=http://localhost:8000
ADMIN_API_BASE_URL=http://localhost:8000

# ============================================================
# MONITORING
# ============================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3333
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

LOKI_PORT=3100
ALERTMANAGER_PORT=9093

# ============================================================
# EMAIL (Development - MailHog)
# ============================================================
MAIL_SERVER=mailhog
MAIL_PORT=1025
MAIL_FROM=noreply@digitalutopia.com

# ============================================================
# DOMAIN (Production)
# ============================================================
DOMAIN=yourdomain.com
FRONTEND_URL=https://${DOMAIN}

# ============================================================
# SECURITY
# ============================================================
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/app.log

# ============================================================
# FEATURES FLAGS
# ============================================================
ENABLE_OPEX=true
ENABLE_MOCK_TRADING=true
ENABLE_MONITORING=true
ENABLE_WEBSOCKET=true

# ============================================================
# BACKUP
# ============================================================
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups
