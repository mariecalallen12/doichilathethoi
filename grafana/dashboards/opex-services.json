{
  "dashboard": {
    "title": "OPEX Services Dashboard",
    "tags": ["opex", "services"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "OPEX API Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(opex_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "OPEX Request Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(opex_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "OPEX Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(opex_requests_total{status=~\"5..|error\"}[5m])",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}

