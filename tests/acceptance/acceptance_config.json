        "GET /deposits"
      ]
    },
    {
      "name": "trading",
      "base_path": "/api/trading",
      "endpoints": [
        "GET /market-data/{symbol}",
        "POST /orders",
        "GET /orders",
        "DELETE /orders/{order_id}",
        "DELETE /orders/{order_id}",
        "GET /positions/{symbol}",
        "DELETE /positions/{position_id}",
        "GET /account",
        "GET /statistics",
        "GET /orderbook/{symbol}",
        "GET /trades",
        "GET /pairs",
        "GET /rules",
        "GET /algorithms",
        "GET /risk-assessment"
      ]
    },
    {
      "name": "market",
      "base_path": "/api/market",
      "endpoints": [
        "GET /prices",
        "GET /summary",
        "GET /health",
        "GET /history/{symbol}",
        "GET /analysis/{symbol}"
      ]
    },
    {
      "name": "portfolio",
      "base_path": "/api/portfolio",
      "endpoints": [
        "GET /analytics",
        "GET /analytics",
        "GET /analytics",
        "GET /performance",
        "GET /analytics",
        "GET /analytics"
      ]
    },
    {
      "name": "compliance",
      "base_path": "/api/compliance",
      "endpoints": [
        "GET /kyc",
        "POST /kyc",
        "GET /aml",
        "GET /aml",
        "GET /history",
        "POST /reports",
        "GET /dashboard"
      ]
    },
    {
      "name": "risk",
      "base_path": "/api/risk",
      "endpoints": [
        "GET /metrics",
        "GET /exposure",
        "GET /scoring",
        "GET /mitigation",
        "GET /monitoring"
      ]
    },
    {
      "name": "staff",
      "base_path": "/api/staff",
      "endpoints": [
        "GET /referrals",
        "GET /referrals",
        "GET /referrals"
      ]
    },
    {
      "name": "users",
      "base_path": "/api/users",
      "endpoints": [
        "GET /",
        "GET /{user_id}",
        "PUT /{user_id}/role",
        "GET /{user_id}/activity"
      ]
    },
    {
      "name": "advanced",
      "base_path": "/api/advanced",
      "endpoints": [
        "GET /dashboard",
        "GET /indicators/{symbol}",
        "GET /algorithms",
        "GET /strategies",
        "POST /strategies",
        "POST /backtest",
        "GET /backtest/{backtest_id}/results",
        "POST /live-trade"
      ]
    }
