  "api_modules": [
    {
      "name": "auth",
      "base_path": "/api/auth",
      "endpoints": [
        "POST /register",
        "POST /login",
        "POST /logout",
        "POST /refresh",
        "GET /verify",
        "POST /forgot-password"
      ]
    },
    {
      "name": "client",
      "base_path": "/api/client",
      "endpoints": [
        "GET /profile",
        "PUT /profile",
        "GET /settings",
        "PUT /settings",
        "GET /preferences",
        "PUT /preferences",
        "GET /onboarding/status",
        "POST /onboarding/complete"
      ]
    },
    {
      "name": "admin",
      "base_path": "/api/admin",
      "endpoints": [
        "GET /dashboard",
        "GET /users",
        "GET /users/{user_id}",
        "PUT /users/{user_id}",
        "GET /settings",
        "PUT /settings",
        "GET /analytics",
        "GET /reports",
        "GET /reports",
        "GET /logs"
      ]
    },
    {
      "name": "financial",
